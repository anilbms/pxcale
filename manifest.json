{
  "manifest_version": 2,

  "name": "Test chrome extension",
  "description": "testing chrome extension.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "permissions":[
      "activeTab"
    ],
    "web_accessible_resources": ["style.css","scale.png"]
}
